@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Update";
}

<h4>Update Patients' Test Results Here</h4>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select asp-for="GenderId" hidden class="form-control" asp-items="ViewBag.GenderList"></select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientTypeId" class="control-label"></label>
                <select asp-for="PatientTypeId" hidden class="form-control" asp-items="ViewBag.PatientType"></select>
                <span asp-validation-for="PatientTypeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" readonly class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" readonly class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" readonly class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" readonly class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyTemperature" class="control-label"></label>
                <input asp-for="BodyTemperature" readonly class="form-control" />
                <span asp-validation-for="BodyTemperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pulse" class="control-label"></label>
                <input asp-for="Pulse" readonly class="form-control" />
                <span asp-validation-for="Pulse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SugarLevel" class="control-label"></label>
                <input asp-for="SugarLevel" readonly class="form-control" />
                <span asp-validation-for="SugarLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" readonly class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input readonly class="form-check-input" asp-for="isHMO" /> 
                    @Html.DisplayNameFor(model => model.isHMO)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalDate" class="control-label"></label>
                <input asp-for="ArrivalDate" readonly class="form-control" />
                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complaints" class="control-label"></label>
                <textarea asp-for="Complaints" readonly class="form-control">  </textarea>
                <span asp-validation-for="Complaints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrNotes" class="control-label"></label>
                <textarea asp-for="DrNotes" readonly class="form-control"> </textarea>
                <span asp-validation-for="DrNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestResult" class="control-label"></label>
                <textarea asp-for="TestResult" class="form-control"> </textarea>
                <span asp-validation-for="TestResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrRemark" class="control-label"></label>
                <textarea asp-for="DrRemark" readonly class="form-control"> </textarea>
                <span asp-validation-for="DrRemark" class="text-danger"></span>
            </div>
           
                       
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
